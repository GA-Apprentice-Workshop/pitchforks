include layout

block content
	.col-sm-6
		form.form(role="form", method="POST", action="/signup")
			.form-group
				.input-group
					label.sr(for="username") Username
					input.form-control(name="username", id="username")
			.form-group
				.input-group
					label.sr(for="email") Email
					input.form-control(name="email", id="email")
			.form-group
				.input-group
					label.sr(for="location") Location
					input.form-control(name="location", id="location")
			.form-group
				.input-group
					label.sr(for="avatar") Avatar
					input.form-control(name="avatar", id="avatar")
					p.help-block Upload your avatar!
			.form-group
				.input-group
					label.sr(for="password") Password
					input.form-control(type="password" name="password", id="password")
			button(type="submit", class="btn btn-default") Sign Up