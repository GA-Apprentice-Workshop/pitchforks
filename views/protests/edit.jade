extends ../layout

block content
	.container
		form.form(role="form" id="protestForm", method="POST", action="/protests/"+ protest.event_id +"?_method=PATCH")
			.form-group
				.input-group
					label.sr(for="event") Protest Title
					input.form-control(name="name", id="event", value= protest.name, autofocus)
			.form-group
				.input-group
					label.sr(for="date") Date
					input.form-control(type="date", name="date", id="date")
			.form-group
				.input-group
					label.sr(for="description") Description
					textarea.form-control(name="description", rows="5", cols="50", id="description")= protest.description
			.form-group
				.input-group
					label.sr(for="location") City, State
					input.form-control(name="location", id="location", value= protest.location)
			button.btn.btn-default(type="submit") Submit